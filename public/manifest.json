{
  "manifest_version": 3,
  "name": "__MSG_appName__",
  "description": "__MSG_appDescription__",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": ["*://*.librerianacional.com/*"],
      "js": ["content-script.js"]
    }
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    },
    "default_title": "__MSG_defaultTitle__"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "options_ui": {
    "page": "options.html"
  },
  "author": "seagomezar@gmail.com",
  "default_locale": "es",
  "web_accessible_resources": [
    {
      "resources": [ "icon.png" ],
      "matches": [ "*://*.librerianacional.com/*" ]
    }
  ]
}