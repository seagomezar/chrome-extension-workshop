{
  "manifest_version": 3,
  "name": "__MSG_appName__",
  "description": "__MSG_appDescription__",
  "version": "1.0",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    },
    "default_title": "__MSG_defaultTitle__"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "author": "seagomezar@gmail.com",
  "default_locale": "es",
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; default-src 'self';",
    "isolated_world": "script-src 'self'; object-src 'self';"
  }
}